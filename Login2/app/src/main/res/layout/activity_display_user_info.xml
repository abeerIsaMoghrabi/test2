<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/img"
        android:src="@drawable/l1"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/FN"
                android:paddingRight="20dp"
                android:paddingTop="17dp"
                android:textColor="@color/red_logo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:paddingTop="17dp"
                android:textColor="@color/red_logo"
                android:backgroundTint="@color/red_logo"
                android:id="@+id/FN_dis"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/LN"
                android:paddingRight="20dp"
                android:paddingTop="17dp"
                android:textColor="@color/red_logo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:textColor="@color/red_logo"
                android:backgroundTint="@color/red_logo"
                android:paddingTop="17dp"
                android:id="@+id/LN_dis"></TextView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:paddingRight="20dp"
            android:paddingTop="17dp"
            android:textColor="@color/red_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:textColor="@color/red_logo"
            android:paddingTop="17dp"
            android:backgroundTint="@color/red_logo"
            android:id="@+id/age_dis"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:paddingRight="20dp"
            android:paddingTop="17dp"
            android:textColor="@color/red_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:textColor="@color/red_logo"

            android:backgroundTint="@color/red_logo"
            android:paddingTop="17dp"
            android:id="@+id/email_dis"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/pas"
            android:paddingRight="20dp"
            android:paddingTop="17dp"
            android:textColor="@color/red_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:textColor="@color/red_logo"

            android:backgroundTint="@color/red_logo"
            android:paddingTop="17dp"
            android:id="@+id/pass_dis"></TextView>

    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20px"
        android:id="@+id/RBTN_group_dis">
        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:text="@string/gender"
            android:paddingRight="20dp"
            android:paddingTop="17dp"
            android:textColor="@color/red_logo"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="@string/MA"
            android:layout_marginRight="25dp"
            android:textColor="@color/red_logo"

            android:id="@+id/male_dis"


            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FM"
            android:textColor="@color/red_logo"
            android:id="@+id/female_dis"

            />

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_logo"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:id="@+id/edit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/signout"
            android:textColor="@color/red_logo"
            android:id="@+id/signout"
            />
    </LinearLayout>



</LinearLayout>
